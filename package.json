{
  "name": "tauri_nuxt",
  "private": true,
  "version": "0.1.7",
  "type": "module",
  "scripts": {
    "tauri": "tauri",
    "clean:frontend": "cd src-nuxt && pnpm run clean",
    "clean:backend": "rm -Rf src-tauri/target && rm src-tauri/Cargo.lock",
    "clean:root": "rm -Rf node_modules",
    "clean": "pnpm run clean:frontend && pnpm run clean:backend && pnpm run clean:root",
    "install_dependencies:debian": "sudo apt install build-essential pkg-config libgtk-3-dev libglib2.0-dev libwebkit2gtk-4.1-dev libayatana-appindicator3-dev librsvg2-dev libssl-dev",
    "project:init": "pnpm install && cd src-nuxt && pnpm install",
    "release": "release-it",
    "prepare": "lefthook install",
    "frontend:lint": "cd src-nuxt && pnpm run lint",
    "frontend:typecheck": "cd src-nuxt && pnpm run typecheck",
    "frontend:test": "cd src-nuxt && pnpm run test",
    "backend:lint": ".scripts/backend-lint",
    "backend:format:check": ".scripts/backend-format-check",
    "backend:test": ".scripts/backend-test",
    "template:check": ".scripts/sync-template-check",
    "format": "cd src-nuxt && pnpm run format",
    "format:check": "cd src-nuxt && pnpm run format:check",
    "storybook": "cd src-nuxt && pnpm run storybook",
    "storybook:build": "cd src-nuxt && pnpm run storybook:build"
  },
  "dependencies": {
    "pnpm": "^10.30.3"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "lefthook"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^20.4.2",
    "@commitlint/config-conventional": "^20.4.2",
    "@release-it/bumper": "^7.0.5",
    "@tauri-apps/cli": "^2.10.0",
    "lefthook": "^2.1.1",
    "release-it": "^19.2.4"
  }
}
